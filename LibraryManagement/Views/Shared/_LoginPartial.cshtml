@{
    var user = Session["User"] as LibraryManagement.DTOs.UserDTO; // Retrieve user info from session
    var isLoggedIn = user != null; // Check if a user is logged in
}

@if (!isLoggedIn)
{
    <li class="dropdown">
        <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="glyph glyph-contact-2"></i></a>
        <ul class="dropdown-menu">
            <li><a href="@Url.Action("Login","Account")">Sign In</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="@Url.Action("Register","Account")">Create an account</a></li>
        </ul>
    </li>
}
else
{
    <li class="dropdown">
        <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="glyph glyph-contact"></i></a>
        <ul class="dropdown-menu">
            <li><a href="#">@user.Name</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="@Url.Action("Logout","Account")">Sign out</a></li>
        </ul>
    </li>
}
